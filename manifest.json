{
  "manifest_version": 3,
  "name": "Local AI Assistant",
  "version": "1.0.0",
  "description": "Privacy-first local assistant with deterministic transforms, NLP, and zero external API calls by default",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "optional_permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Local AI Assistant",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "*.css",
        "chunks/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'"
  }
}
